---
import { getToken } from "@/lib/auth";
import { getUserDataByToken } from "@/lib/server/auth";
import { OsucPermissions } from "@/types/permissions";
import { actions } from "astro:actions";
import EditorMDX from "@/components/EditorMDX.tsx";
import Layout from "@/layouts/Layout.astro";
import TagSelector from "@/components/ui/TagSelector.astro";

// Authentication check
const token = getToken(Astro.cookies);
if (!token) {
  return Astro.redirect("/");
}

const user = await getUserDataByToken(token);
if (!user || !user.permissions.includes(OsucPermissions.userCanCreateBlogs)) {
  return Astro.redirect("/");
}

let message = "";
let messageType = "";

// Verificar si hay un resultado de la acci√≥n
const result = Astro.getActionResult(actions.createBlog);

if (result && !result.error) {
  message = result.data?.message || "Blog creado exitosamente";
  messageType = "success";
} else if (result?.error) {
  message = result.error.message || "Error al crear el blog";
  messageType = "error";
}

const blogResponse = await fetch(new URL("/api/blogs", Astro.url.origin));
const blogData = (await blogResponse.json()) as { blogTags: string[] };
---

<Layout>
  <main
    class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8"
  >
    <!-- Estado del formulario -->
    {
      message && (
        <section
          class={`border rounded-md p-4 sm:p-6 mb-6 ${
            messageType === "success"
              ? "border-green-200 bg-green-50"
              : "border-red-200 bg-red-50"
          }`}
          role="alert"
          aria-live="polite"
        >
          <div class="flex items-center gap-2">
            <span
              class={`flex-shrink-0 ${
                messageType === "success" ? "text-green-600" : "text-red-600"
              }`}
            >
              {messageType === "success" ? "‚úÖ" : "‚ùå"}
            </span>
            <p
              class={`text-xs sm:text-sm font-medium ${
                messageType === "success" ? "text-green-800" : "text-red-800"
              }`}
            >
              {message}
            </p>
          </div>
        </section>
      )
    }
    <!-- Header Section -->
    <header class="mb-8 sm:mb-12">
      <section
        class="border border-border rounded-md p-4 sm:p-6 lg:p-8 min-w-0"
        aria-labelledby="page-title"
      >
        <div class="text-center">
          <h1
            id="page-title"
            class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-foreground mb-2 break-words"
          >
            Crear Nuevo Blog
          </h1>
          <p class="text-sm sm:text-base lg:text-lg text-muted-foreground">
            Comparte tus experiencias y conocimientos con la comunidad
            estudiantil
          </p>
        </div>
      </section>
    </header>

    <!-- Consejos y Componentes en fila -->
    <div
      class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-8 mb-8 sm:mb-12 min-w-0"
    >
      <!-- Consejos para escribir -->
      <section
        class="border border-border rounded-md p-4 sm:p-6 min-w-0"
        aria-labelledby="tips-title"
      >
        <h3
          id="tips-title"
          class="text-base sm:text-lg font-semibold text-foreground mb-3 sm:mb-4"
        >
          üí° Consejos para escribir
        </h3>
        <ul
          class="text-xs sm:text-sm text-muted-foreground space-y-2"
          role="list"
        >
          <li class="flex items-start gap-2">
            <span class="text-green-500 mt-1 flex-shrink-0">‚Ä¢</span>
            <span class="min-w-0">Usa un t√≠tulo descriptivo y atractivo</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-green-500 mt-1 flex-shrink-0">‚Ä¢</span>
            <span class="min-w-0"
              >Estructura tu contenido con encabezados y p√°rrafos cortos</span
            >
          </li>
          <li class="flex items-start gap-2">
            <span class="text-green-500 mt-1 flex-shrink-0">‚Ä¢</span>
            <span class="min-w-0"
              >Incluye ejemplos y experiencias personales</span
            >
          </li>
          <li class="flex items-start gap-2">
            <span class="text-green-500 mt-1 flex-shrink-0">‚Ä¢</span>
            <span class="min-w-0"
              >Revisa la ortograf√≠a y gram√°tica antes de publicar</span
            >
          </li>
        </ul>
      </section>

      <!-- Informaci√≥n sobre componentes -->
      <section
        class="border border-border rounded-md p-4 sm:p-6 min-w-0"
        aria-labelledby="components-title"
      >
        <h3
          id="components-title"
          class="text-base sm:text-lg font-semibold text-foreground mb-3 sm:mb-4"
        >
          üß© Componentes disponibles
        </h3>
        <div class="space-y-2 sm:space-y-3">
          <div class="p-2 sm:p-3 bg-muted/50 rounded-lg min-w-0">
            <h4 class="font-medium text-xs sm:text-sm text-foreground mb-1">
              Pills
            </h4>
            <p class="text-xs text-muted-foreground">
              Etiquetas coloridas para destacar informaci√≥n importante
            </p>
          </div>
          <div class="p-2 sm:p-3 bg-muted/50 rounded-lg min-w-0">
            <h4 class="font-medium text-xs sm:text-sm text-foreground mb-1">
              Tablas
            </h4>
            <p class="text-xs text-muted-foreground">
              Organiza datos de manera clara y estructurada
            </p>
          </div>
          <div class="p-2 sm:p-3 bg-muted/50 rounded-lg min-w-0">
            <h4 class="font-medium text-xs sm:text-sm text-foreground mb-1">
              Im√°genes
            </h4>
            <p class="text-xs text-muted-foreground">
              A√±ade im√°genes para complementar tu contenido
            </p>
          </div>
        </div>
      </section>
    </div>

    <!-- Formulario Principal -->
    <section aria-labelledby="form-title">
      <article class="border border-border rounded-md min-w-0">
        <div class="p-4 sm:p-6 lg:p-8">
          <h2
            id="form-title"
            class="text-lg sm:text-xl font-semibold mb-4 sm:mb-6"
          >
            Informaci√≥n del blog
          </h2>

          <form
            class="space-y-4 sm:space-y-6 min-w-0"
            method="POST"
            action={actions.createBlog}
          >
            <!-- Informaci√≥n b√°sica del blog -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="space-y-2 min-w-0">
                <label class="text-sm font-medium text-foreground block">
                  T√≠tulo del blog <span class="text-red-500">*</span>
                </label>
                <input
                  name="title"
                  placeholder="Ingrese el t√≠tulo del blog"
                  class="w-full min-w-0 px-3 sm:px-4 py-2 sm:py-3 border border-border rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-all duration-200"
                  required
                />
              </div>
              <div class="space-y-2 min-w-0">
                <label class="text-sm font-medium text-foreground block">
                  Per√≠odo <span class="text-red-500">*</span>
                </label>
                <input
                  name="period_time"
                  placeholder="Ej: 2024-1, 2024-2"
                  class="w-full min-w-0 px-3 sm:px-4 py-2 sm:py-3 border border-border rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-all duration-200"
                  required
                />
              </div>
              <div class="space-y-2 min-w-0">
                <label class="text-sm font-medium text-foreground block">
                  Tiempo de lectura <span class="text-red-500">*</span>
                </label>
                <div class="relative min-w-0">
                  <input
                    name="readtime"
                    type="number"
                    min="1"
                    max="60"
                    placeholder="5"
                    class="w-full min-w-0 px-3 sm:px-4 py-2 sm:py-3 pr-12 border border-border rounded-lg bg-background text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent transition-all duration-200 [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none"
                    required
                    oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/^0+/, '') || ''"
                  />
                  <span
                    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-muted-foreground text-sm"
                  >
                    min
                  </span>
                </div>
              </div>
              <TagSelector
                name="tags"
                label="Tags"
                tags={blogData.blogTags}
                placeholder="Selecciona las etiquetas..."
              />
            </div>

            <!-- Separador -->
            <div class="border-t border-border pt-4 sm:pt-6">
              <div class="space-y-2 mb-4">
                <label class="text-sm font-medium text-foreground block">
                  Contenido del blog <span class="text-red-500">*</span>
                </label>
                <p class="text-xs sm:text-sm text-muted-foreground">
                  Utiliza el editor para crear contenido enriquecido con
                  formato, im√°genes y componentes especiales.
                </p>
              </div>
            </div>

            <!-- Editor MDX -->
            <div class="min-w-0">
              <EditorMDX submitText="Publicar Blog" client:only="react" />
            </div>
          </form>
        </div>
      </article>
    </section>
  </main>
</Layout>
