---
import EditorMDX from "@/components/EditorMDX.tsx";
import Layout from "@/layouts/Layout.astro";
import { effect } from "astro:schema";

let message = "";
let messageType = "";

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();

    // Enviar los datos a la API
    const response = await fetch(new URL("/api/savemdx", Astro.url.origin), {
      method: "POST",
      body: data,
    });

    if (response.ok) {
      message = "Blog creado exitosamente";
      messageType = "success";
    } else {
      message = "Error al crear el blog. Por favor, intenta nuevamente.";
      messageType = "error";
    }
  } catch (error) {
    console.error("Error al procesar el formulario:", error);
    message = "Error al procesar el formulario. Por favor, intenta nuevamente.";
    messageType = "error";
  }
}
