---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const contribuidores = await getCollection("contribuidores");
const agradecimientos = await getCollection("agradecimientos");
  
---
<Layout>
    <div class="max-w-6xl mx-auto px-4 py-8">
        <!-- Contributors Section -->
        <section class="border border-border rounded-md overflow-hidden mb-8">
            <div class="border-b border-border px-6 py-6">
                <h2 class="text-3xl font-bold text-foreground">Conoce al Equipo</h2>
                <p class="text-md text-muted-foreground mt-1">
                    Conoce a los estudiantes que hacen posible este proyecto y contribuyen al desarrollo de BuscaRamos.
                </p>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 tablet:grid-cols-2 desktop:grid-cols-3 gap-6">
                    {contribuidores.map((contributor) => (
                        <div class="border border-border rounded-md p-6 bg-background ">
                            <div class="flex items-start gap-4">
                                <div class="flex-1 justify-between min-w-0">
                                    <section>
                                    
                                        <h3 class="text-xl font-semibold text-foreground text-wrap">
                                            {contributor.data.nombre}
                                        </h3>
                                        <p class="text-sm text-muted-foreground max-w-[85%] mb-1">
                                            {contributor.data.rol}
                                        </p>
                                        <p class="text-xs text-muted-foreground max-w-[85%] mb-3">
                                            {contributor.data.carrera}
                                        </p>
                                    </section>
                                    <div class="flex gap-3">
                                        {contributor.data.linkedin && (
                                            <a 
                                                href={contributor.data.linkedin} 
                                                target="_blank" 
                                                rel="noopener noreferrer"
                                                class="text-blue-600 hover:text-blue-700 transition-colors"
                                                aria-label={`LinkedIn de ${contributor.data.nombre}`}
                                            >
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                                </svg>
                                            </a>
                                        )}
                                        {contributor.data.github && (
                                            <a 
                                                href={contributor.data.github} 
                                                target="_blank" 
                                                rel="noopener noreferrer"
                                                class="text-foreground hover:text-muted-foreground transition-colors"
                                                aria-label={`GitHub de ${contributor.data.nombre}`}
                                            >
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                                </svg>
                                            </a>
                                        )}
                                    </div>
                                </div>
                                <img
                                    src={contributor.data.imagen}
                                    alt={`Foto de ${contributor.data.nombre}`}
                                    class="w-20 h-20 rounded-lg object-cover border border-border"
                                />  
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Acknowledgments Section -->
        <section class="border border-border rounded-md overflow-hidden">
            <div class="border-b border-border px-6 py-6">
                <h2 class="text-2xl font-semibold text-foreground">Agradecimientos</h2>
                <p class="text-sm text-muted-foreground mt-1">
                    Reconocemos y agradecemos a todas las personas que, gracias a sus esfuerzos hist√≥ricos, han hecho posible este proyecto.
                </p>
            </div>
            <div class="p-6">
                <div class="flex flex-wrap gap-3">
                    {agradecimientos.map((person) => (
                        person.data.linkedin ? (
                            <a 
                                href={person.data.linkedin}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center rounded-xl border bg-background text-muted-foreground border-border gap-2 px-3 py-1.5 text-sm font-medium whitespace-nowrap hover:bg-primary-foreground/80 hover:text-primary/80 transition-colors cursor-pointer"
                            >
                                <img
                                    src={person.data.imagen}
                                    alt={`Foto de ${person.data.nombre} ${person.data.apellido}`}
                                    class="w-9 h-9 rounded-full object-cover border border-border flex-shrink-0"
                                />
                                <span>
                                    {person.data.nombre} {person.data.apellido}
                                </span>
                            </a>
                        ) : (
                            <div class="inline-flex items-center rounded-xl border bg-background text-muted-foreground border-border gap-2 px-3 py-1.5 text-sm font-medium whitespace-nowrap">
                                <img
                                    src={person.data.imagen}
                                    alt={`Foto de ${person.data.nombre} ${person.data.apellido}`}
                                    class="w-9 h-9 rounded-full object-cover border border-border flex-shrink-0"
                                />
                                <span>
                                    {person.data.nombre} {person.data.apellido}
                                </span>
                            </div>
                        )
                    ))}
                </div>
            </div>
        </section>
    </div>
</Layout>
