---
import { getToken } from "@/lib/auth";
import { getUserDataByToken } from "@/services/auth";
import { OsucPermissions } from "@/types/permissions";
import EditorMDX from "@/components/EditorMDX.tsx";
import Layout from "@/layouts/Layout.astro";

// Authentication check
const token = getToken(Astro.cookies);
if (!token) {
  return Astro.redirect("/");
}

const user = await getUserDataByToken(token);
console.log(user?.permissions);
if (!user || !user.permissions.includes(OsucPermissions.userCanCreateBlogs)) {
  return Astro.redirect("/");
}

let message = "";
let messageType = "";

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();

    // Enviar los datos a la API
    const response = await fetch(new URL("/api/savemdx", Astro.url.origin), {
      method: "POST",
      body: data,
    });

    if (response.ok) {
      message = "Recomendaci√≥n creada exitosamente";
      messageType = "success";
    } else {
      message =
        "Error al crear la recomendaci√≥n. Por favor, intenta nuevamente.";
      messageType = "error";
    }
  } catch (error) {
    console.error("Error al procesar el formulario:", error);
    message = "Error al procesar el formulario. Por favor, intenta nuevamente.";
    messageType = "error";
  }
}

const blogsResponse = await fetch(new URL("/api/blogs", Astro.url.origin));
const blogsData = (await blogsResponse.json()) as { schools?: string[] };
const schools = blogsData.schools || [];
